{
  "manifest_version": 2,

  "name": "ESL Admin Helper",
  "description": "Helps you with your admin tasks.",
  "version": "0.1.1",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "background": {
    "scripts": ["script/background.js"]
  },

  "content_scripts":[
    {
      "matches": ["https://play.eslgaming.com/*"],
      "css": ["style/select2.min.css"],
      "js": [ "script/MooTools-Core-1.6.0.js", "script/jquery-3.2.1.min.js", "script/jquery-ui.min.js", "script/select2.min.js", "script/gmFunctions.js", "script/ESLminihelper.js", "script/main.js"],
      "run_at":"document_end"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Settings"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications"
  ]
}
